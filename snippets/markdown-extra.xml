<snippets language="Markdown">
  <!-- _______________________ Markdown snippets. _______________________ -->

  <snippet id="atx-header">
    <text><![CDATA[${1:#} ${2:Header} $1

]]></text>
    <tag>h</tag>
    <description>Header (atx-style)</description>
  </snippet>

  <snippet id="setext-header-1">
    <text><![CDATA[${1:Header}
===============

]]></text>
    <tag>Hs</tag>
    <description>Header 1 (setext-style)</description>
  </snippet>

  <snippet id="setext-header-2">
    <text><![CDATA[${1:Header}
---------------

]]></text>
    <tag>hs</tag>
    <description>Header 2 (setext-style)</description>
  </snippet>

  <snippet id="horizontal-rule">
    <text><![CDATA[***************

$0]]></text>
    <tag>hr</tag>
    <description>Horizontal Rule</description>
  </snippet>

  <snippet id="unordered-list">
    <text><![CDATA[* $1
* $2
* $3
* $4

]]></text>
    <tag>ul</tag>
    <description>Unordered List</description>
  </snippet>

  <snippet id="ordered-list">
    <text><![CDATA[1. $1
2. $2
3. $3
4. $4

]]></text>
    <tag>ol</tag>
    <description>Ordered List</description>
  </snippet>

  <snippet id="code-span">
    <text><![CDATA[\`${1:$GEDIT_SELECTED_TEXT}\`]]></text>
    <tag>code</tag>
    <description>Wrap Selection as Code Span</description>
    <accelerator><![CDATA[<Control><Alt>c]]></accelerator>
  </snippet>

  <snippet id="inline-link">
    <text><![CDATA[[${1:$GEDIT_SELECTED_TEXT}](${2:URL})]]></text>
    <tag>a</tag>
    <description>Wrap Selection as Inline Link</description>
    <accelerator><![CDATA[<Control><Alt>a]]></accelerator>
  </snippet>

  <snippet id="reference-link">
    <text><![CDATA[[${1:$GEDIT_SELECTED_TEXT}][${2:link label}]]]></text>
    <tag>aref</tag>
    <description>Wrap Selection as Reference Link</description>
    <accelerator><![CDATA[<Control><Alt>r]]></accelerator>
  </snippet>

  <snippet id="link-definition">
    <text><![CDATA[[${1:link label}]: ${2:URL}
]]></text>
    <tag>adef</tag>
    <description>Link Definition</description>
  </snippet>

  <snippet id="inline-image">
    <text><![CDATA[![${1:alt text}](${2:URL})]]></text>
    <tag>img</tag>
    <description>Inline Image</description>
  </snippet>

  <snippet id="reference-image">
    <text><![CDATA[![${1:alt text}][${2:image label}]]]></text>
    <tag>iref</tag>
    <description>Reference Image</description>
  </snippet>

  <!-- ____________________ Markdown Extra snippets. ____________________ -->

  <snippet id="definition-list">
    <text><![CDATA[${1:Word 1}
: ${2:Definition}
${3:Word 2}
: ${4:Definition}
${5:Word 3}
: ${6:Definition}
${7:Word 4}
: ${8:Definition}

]]></text>
    <tag>dl</tag>
    <description>Definition List</description>
  </snippet>

  <snippet id="fenced-code-block">
    <text><![CDATA[~~~~~~~~~~~~~~~
${1:$GEDIT_SELECTED_TEXT}
~~~~~~~~~~~~~~~]]></text>
    <tag>Code</tag>
    <description>Wrap Selection as Fenced Code Block</description>
    <accelerator><![CDATA[<Control><Alt>b]]></accelerator>
  </snippet>

  <snippet id="abbreviation-definition">
    <text><![CDATA[*[${1:abbreviation}]: ${2:definition}
]]></text>
    <tag>abbr</tag>
    <description>Abbreviation Definition</description>
  </snippet>

  <snippet id="footnote-reference">
    <text><![CDATA[[^${1:footnote label}]]]></text>
    <tag>fnref</tag>
    <description>Footnote Reference</description>
  </snippet>

  <snippet id="footnote-definition">
    <text><![CDATA[[^${1:footnote label}]: ${2:Footnote.}
]]></text>
    <tag>fndef</tag>
    <description>Footnote Definition</description>
  </snippet>

  <snippet id="table">
    <text><![CDATA[${1:First Header}        | ${6:First Header}
--------------------|--------------------
${2:Content Cell}        | ${7:Content Cell}
${3:Content Cell}        | ${8:Content Cell}
${4:Content Cell}        | ${9:Content Cell}
${5:Content Cell}        | ${10:Content Cell}
]]></text>
    <tag>table</tag>
    <description>Table</description>
  </snippet>
</snippets>
